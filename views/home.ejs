
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Demo OAuth 2.0 IONAPI</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <style>
        body {
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .jumbotron {
          margin-top: 10px;
        }
    </style>
</head>

<body>
    <div class="container">
        <%- include('partials/navbar') %>
        <div class="jumbotron">
            <table align="center">
                <tr> 
                    <td><img src="/image/infor.png" width="280px" height="237px"/></td>
                    <td><img src="../image/nodejs.png" /></td>
                </tr>                    
            </table>    
        </div>

        <form ref='uploadForm' 
        id='uploadForm' 
        action='/upload/files' 
        method='post' 
        encType="multipart/form-data">
            <table align="center">
                <tr>
                    <td><input type="file" name="sampleFile" /></td>
                    <td><input type='submit' value='Upload!' /></td>
                </tr>    
            </table>    
        </form>     

        <div class="row">
            <div class="col-lg-12">
                <div class="list-group">
                  <!-- loop over blog posts and render them -->
                  [ <%=files.length%> ] PROFILE(S)
                  <br><br>
                  <ul>
                      <table class="table">
                      <% files.forEach(function(file){ %>
                        <tr>
                            <td><li><%=file%></li></td>
                            <td>
                                <form action="/connect" method="POST">
                                <input type="hidden" name="api" value="<%=file%>">
                                <input type="submit" value="Authorize">
                                </form>
                            </td>
                            <td>    
                                <form action="/remove" method="POST">
                                <input type="hidden" name="api" value="<%=file%>">
                                <input type="submit" value="Delete">
                                </form>
                            </td>    
                        </tr>
                      <% }) %>
                      </table>
                  </ul>
                  
                </div>
            </div>
        </div>
        <%- include('partials/footer') %>
    </div>
</body>

</html>